<header class="header">
    <div class="container header__row">
        <div class="header__burger burger menu-trigger w-5">
            <img src="/img/icons/burger.svg" alt="burger" class="trigger">
            <img src="/img/icons/cross.svg" alt="close" class="close">
        </div>
        <div class="header__logo">
            <a href="/">
                <img src="/img/icons/logo.svg" alt="logo">
            </a>
        </div>
        <nav class="header__menu-wrapper">
            <ul class="header__menu">
                <li><a class="header__menu-item link-no-underline" href="#orders" data-popup="orders">Заказчикам</a>
                </li>
                <li><a class="header__menu-item link-no-underline" href="#freelancers"
                        data-popup="freelancers">Фрилансерам</a></li>
                <li><a class="header__menu-item link-no-underline" href="#vacancies" data-popup="vacancies">Вакансии</a>
                </li>
            </ul>
        </nav>
        <div class="header__actions">
            <a href="#" class="inline-block link-no-underline">Вход</a>
            <a href="#" class="btn btn-blue">
                Регистрация
            </a>
        </div>
        <div class="header__account header-account menu-trigger w-5">
            <img src="/img/icons/user.svg" alt="account" class="trigger">
            <img src="/img/icons/cross.svg" alt="close" class="close transform translate-x-1">
        </div>
    </div>
</header>
{{#with header.menu.orders}}
<div class="header-menu header-menu-orders">
    <div class="container">
        <div class="header-menu__row">
            <div class="header-menu__items">
                {{#each items}}
                <div class="header-menu-item-col">
                    <a href="#" class="header-menu-item">
                        <div class="header-menu-item__image">
                            <img src="{{icon}}" alt="icon">
                        </div>
                        <div class="header-menu-item__content">
                            <div class="header-menu-item__title">{{title}}</div>
                            <div class="header-menu-item__description">{{description}}</div>
                            {{#if tooltip}}
                                <div class="text-xs text-text-disabled mt-0.5"><span class="transform translate-y-1 inline-block mr-1">*</span>{{tooltip}}</div>
                            {{/if}}
                        </div>
                    </a>
                </div>
                {{/each}}

            </div>
            <div class="header-menu__image">
                <img src="{{image}}" srcset="/img/chair_man@2x.png 2x" alt="image" loading="lazy">
            </div>
        </div>
    </div>
</div>
{{/with}}
